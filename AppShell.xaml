<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BookWritingApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BookWritingApplication"
    xmlns:views="clr-namespace:BookWritingApplication.View"
    Shell.FlyoutBehavior="Disabled"
    Title="BookWritingApplication">

    <!-- Define routes for navigation -->
    <ShellContent Route="mainPage" ContentTemplate="{DataTemplate views:MainPage}" />
    <ShellContent Route="addBookPage" ContentTemplate="{DataTemplate views:AddBookPage}" />
    <ShellContent Route="writingPromptsPage" ContentTemplate="{DataTemplate views:WritingPromptsPage}" />
    <ShellContent Route="writersJournalPage" ContentTemplate="{DataTemplate views:WritersJournalPage}" />
    <ShellContent Route="dictionaryPage" ContentTemplate="{DataTemplate views:DictionaryPage}" />
    <ShellContent Route="settingsPage" ContentTemplate="{DataTemplate views:SettingsPage}" />
    
</Shell>
